<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:background="#1BB622"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="Chuyển đổi năm dương lịch" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:text="Năm dương lịch:" />

        <EditText
            android:id="@+id/namduong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:text="Năm" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#A19090"
            android:text="Chuyển đổi"
            android:textAllCaps="false"
            android:layout_marginTop="3dp"
            android:textSize="18dp"
            android:textColor="#3E2723" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:text="Năm âm lịch:" />

        <TextView
            android:id="@+id/namam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FFED52"
            android:textSize="18dp"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Quý tỵ" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1BB622"
        android:layout_weight="0.7"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.2" />

</LinearLayout>